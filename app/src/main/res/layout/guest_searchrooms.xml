<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/hotel_booking_system" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/search_for_room"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <GridLayout
        android:layout_width="375dp"
        android:layout_height="173dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/roomtype"
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:layout_row="0"
            android:layout_column="0"
            android:autofillHints=""
            android:background="@drawable/edittext4"
            android:ems="10"
            android:gravity="center"
            android:hint="Room Type"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/numberofadults"
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/edittext4"
            android:ems="10"
            android:gravity="center"
            android:hint="Number of Adults"
            android:inputType="time"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/checkoutdate"
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:layout_row="2"
            android:layout_column="1"
            android:autofillHints=""
            android:background="@drawable/edittext4"
            android:ems="10"
            android:gravity="center"
            android:hint="Check-out-date"
            android:inputType="date"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/numberofrooms"
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:layout_row="0"
            android:layout_column="1"
            android:autofillHints=""
            android:background="@drawable/edittext4"
            android:ems="10"
            android:gravity="center"
            android:hint="Number of Rooms"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/numberofchildren"
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/edittext4"
            android:ems="10"
            android:gravity="center"
            android:hint="Number of children"
            android:inputType="date"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />


        <EditText
            android:id="@+id/checkindate"
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/edittext4"
            android:ems="10"
            android:gravity="center"
            android:hint="Check-in-date"
            android:inputType="date"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <View
            android:id="@+id/divider2"
            android:layout_width="3dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/white" />

        <View
        android:id="@+id/divider3"
        android:layout_width="3dp"
        android:layout_height="55dp"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@android:color/white" />

        <View
            android:id="@+id/divider4"
            android:layout_width="3dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@android:color/white" />

        <View
            android:id="@+id/divider5"
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/white" />

        <View
            android:id="@+id/divider6"
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/white" />

        <View
            android:id="@+id/divider7"
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@android:color/white" />

        <View
            android:id="@+id/divider8"
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@android:color/white" />

    </GridLayout>

    <Button
        android:id="@+id/SearchForRoom"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="@string/SearchRoom"
        android:textColor="@android:color/white" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="386dp"
        android:layout_height="319dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ListView
                android:id="@+id/myListView"
                android:layout_width="match_parent"
                android:layout_height="500dp">

            </ListView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>