<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/hotel_booking_system" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/search_for_room"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Hotel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Hotel"
            android:textCursorDrawable="@null"
            android:background="@drawable/edittext4"
            android:textColorHint="@android:color/white"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/RoomType"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Room Type"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/white"
            android:background="@drawable/edittext4"
            android:textColorHint="@android:color/white"
            android:inputType="text"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Checkindate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Check-in Date"
            android:textCursorDrawable="@null"
            android:background="@drawable/edittext4"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:inputType="date"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/Checkoutdate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Check-out-date"
            android:textCursorDrawable="@null"
            android:background="@drawable/edittext4"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="date"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>



    <Button
        android:id="@+id/SearchForRoom"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SEARCH FOR ROOM"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"/>


    <ScrollView
        android:id="@+id/grid_1"
        android:layout_width="411dp"
        android:layout_height="257dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ListView
                android:id="@+id/myListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>

        </LinearLayout>
    </ScrollView>



</LinearLayout>